{
  "name": "figma-design-system-builder",
  "version": "1.0.0",
  "description": "A comprehensive design system builder for creating icons, components, and design assets",
  "scripts": {
    "build": "esbuild code.ts --bundle --outfile=code.js --external:figma --loader:.html=text --target=es2020",
    "watch": "esbuild code.ts --bundle --outfile=code.js --external:figma --loader:.html=text --target=es2020 --watch",
    "dev": "npm run watch"
  },
  "devDependencies": {
    "@figma/plugin-typings": "latest",
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}
